<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trend_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/nyt_banner"
            android:background="#80FFFFFF"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">


            <ImageView
                android:id="@+id/newsThumbnail"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/img_unavailable"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dim_foreground_material_dark"
                android:layout_marginLeft="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/newsSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="News Section"/>

                <TextView
                    android:id="@+id/newsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Title of Story"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dim_foreground_material_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/newsThumbnailSecond"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/img_unavailable"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dim_foreground_material_dark"
                android:layout_marginLeft="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/newsSectionSecond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="News Section"/>

                <TextView
                    android:id="@+id/newsTitleSecond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Title of Story"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/moreBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
            android:elevation="1dp"
            android:onClick="moreNews"
            android:text="More" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarTrend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:maxHeight="50dp"
        android:elevation="2dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="gone"/>

</android.support.v7.widget.CardView>


